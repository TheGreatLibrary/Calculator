<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.Light">
        <item name="android:colorBackground"> @color/light_gray</item>
        <item name="android:statusBarColor">@color/light_gray</item>

        <item name="ColorEqualsButton"> @color/orange </item>
        <item name="ColorNumberButton"> @color/white </item>
        <item name="ColorSignButton"> @color/lighter_gray </item>
        <item name="ColorBackGroundApp"> @color/light_gray </item>
        <item name="ColorItemHistory">@color/darker_gray</item>
        <item name="ColorTextElements"> @color/black </item>
        <item name="StyleButtonClearHistory">@drawable/trash_black</item>
        <item name="StyleButtonBackspace">@drawable/delete_black</item>

        <item name="android:navigationBarColor">@color/light_gray</item>
    </style>

    <style name="Base.Theme.Calculator.Green" parent="Theme.Material3.Light">
        <item name="android:colorBackground"> @color/very_lighter_green</item>
        <item name="android:statusBarColor">@color/very_lighter_green</item>

        <item name="ColorEqualsButton"> @color/green_lv </item>
        <item name="ColorNumberButton"> @color/light_green </item>
        <item name="ColorSignButton"> @color/lighter_green </item>
        <item name="ColorBackGroundApp"> @color/very_lighter_green </item>
        <item name="ColorItemHistory">@color/darker_gray</item>
        <item name="ColorTextElements">@color/darkest_gray</item>
        <item name="StyleButtonClearHistory">@drawable/trash_white_green</item>
        <item name="StyleButtonBackspace">@drawable/delete_gray</item>

        <item name="android:navigationBarColor"> @color/light_green</item>
    </style>

    <style name="Base.Theme.Calculator.Blue" parent="Theme.Material3.Light">
        <item name="android:colorBackground"> @color/very_lighter_blue</item>
        <item name="android:statusBarColor">@color/very_lighter_blue</item>

        <item name="ColorEqualsButton"> @color/red </item>
        <item name="ColorNumberButton"> @color/blue </item>
        <item name="ColorSignButton"> @color/lighter_blue </item>
        <item name="ColorBackGroundApp"> @color/very_lighter_blue </item>
        <item name="ColorItemHistory">@color/darker_gray</item>
        <item name="ColorTextElements"> @color/white </item>
        <item name="StyleButtonClearHistory">@drawable/trash_white_blue</item>
        <item name="StyleButtonBackspace">@drawable/delete_white</item>

        <item name="android:navigationBarColor">@color/blue</item>
    </style>

    <style name="Base.Theme.Calculator.Town" parent="Theme.Material3.Light">
        <item name="android:colorBackground">@color/light_brown</item>
        <item name="android:statusBarColor">@color/light_brown</item>
        <item name="ColorEqualsButton"> @color/dark_orange </item>
        <item name="ColorNumberButton"> @color/sea_green_lv </item>
        <item name="ColorSignButton"> @color/light_green_yellow </item>
        <item name="ColorBackGroundApp"> @color/light_brown </item>
        <item name="ColorItemHistory">@color/darker_gray</item>
        <item name="ColorTextElements">@color/white</item>
        <item name="StyleButtonClearHistory">@drawable/trash_white_town</item>
        <item name="StyleButtonBackspace">@drawable/delete_white</item>

        <item name="android:navigationBarColor">@color/sea_green_lv</item>
    </style>
</resources>