<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DayNight">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>

        <item name="ColorEqualsButton"> @color/orange </item>
        <item name="ColorNumberButton"> @color/darkest_gray </item>
        <item name="ColorSignButton"> @color/darker_gray </item>
        <item name="ColorBackGroundApp">@color/black</item>
        <item name="ColorItemHistory">@color/lighter_gray</item>
        <item name="ColorTextElements">@color/white</item>
        <item name="StyleButtonClearHistory">@drawable/trash_white</item>

        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="Base.Theme.Calculator.Green" parent="Theme.Material3.DayNight">
        <item name="android:colorBackground">@color/darkest_green</item>
        <item name="android:statusBarColor">@color/darkest_green</item>

        <item name="ColorEqualsButton"> @color/green_dv </item>
        <item name="ColorNumberButton"> @color/darker_green </item>
        <item name="ColorSignButton"> @color/dark_green</item>
        <item name="ColorBackGroundApp">@color/darkest_green</item>
        <item name="ColorItemHistory">@color/darker_gray</item>
        <item name="ColorTextElements">@color/very_lighter_green</item>
        <item name="StyleButtonClearHistory">@drawable/trash_black_green</item>

        <item name="android:navigationBarColor"> @color/darker_green</item>
    </style>

    <style name="Base.Theme.Calculator.Blue" parent="Theme.Material3.DayNight">
        <item name="android:colorBackground"> @color/darkest_blue</item>
        <item name="android:statusBarColor">@color/darkest_blue</item>

        <item name="ColorEqualsButton"> @color/red </item>
        <item name="ColorNumberButton"> @color/darker_blue </item>
        <item name="ColorSignButton"> @color/dark_blue </item>
        <item name="ColorBackGroundApp"> @color/darkest_blue </item>
        <item name="ColorItemHistory">@color/darker_gray</item>
        <item name="ColorTextElements">@color/white</item>
        <item name="StyleButtonClearHistory">@drawable/trash_black_blue</item>

        <item name="android:navigationBarColor">@color/darker_blue</item>
    </style>

    <style name="Base.Theme.Calculator.Town" parent="Theme.Material3.DayNight">
        <item name="android:colorBackground">@color/darkest_brown</item>
        <item name="android:statusBarColor">@color/darkest_brown</item>

        <item name="ColorEqualsButton"> @color/darker_orange </item>
        <item name="ColorNumberButton"> @color/sea_green_dv </item>
        <item name="ColorSignButton"> @color/dark_green_yellow </item>
        <item name="ColorBackGroundApp"> @color/darkest_brown </item>
        <item name="ColorItemHistory">@color/darker_gray</item>
        <item name="ColorTextElements">@color/white</item>
        <item name="StyleButtonClearHistory">@drawable/trash_black_town</item>

        <item name="android:navigationBarColor">@color/sea_green_dv</item>
    </style>
</resources>